<% if session[:username] %>
<%= link_to 'logout', logout_users_path %>
<% end %>

<% if !flash[:notice].blank? %>
<%= flash[:notice] %>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>
<% if @user.commenter %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', articles_path %> 
<% if @user.editor %>
<%= link_to 'Edit', edit_article_path(@article) %>
<% end %>
<% end %>